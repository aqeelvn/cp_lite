<div class="recipe">
  <div class="part image">
    <%= image_tag recipe.cover_image.url(:thumb) %>
  </div>
  <div class="part details">
    <%= link_to recipe.title, recipe %>
    <div>
      <span><%= recipe.comments_count %> comments, </span>
      <span><%= recipe.likes_count %> likes</span>
    </div>
    <div>
      <%= recipe.description %>
    </div>
  </div>
</div>
